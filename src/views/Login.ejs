<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <%- include('./partials/head') %>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
</head>
<body>
    <%- include('./partials/head') %>
    <header class="main__header">
        <%-include('./partials/navigation')%>
    </header>
     <!-- Sección de Login y Comentarios -->
     <section class="login-page">
        <!-- Sección de Iniciar Sesión -->
        <div class="login-section">
            <h1>Iniciar Sesión</h1>
            <form>
                <div class="mb-3">
                    <label for="email" class="form-label">Correo Electrónico</label>
                    <input type="email" class="form-control" id="email" placeholder="Ingrese su correo">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" placeholder="Ingrese su contraseña">
                </div>
                <button type="submit" class="btn btn-blue w-100">Iniciar Sesión</button>
            </form>
            <div class="mt-3 text-center">
                <p>No tienes cuenta? <a href="#">Regístrate aquí</a></p>
            </div>
        </div>
    
        <!-- Sección de Comentarios y Sugerencias -->
        <div class="comments-section">
            <h2>Comentarios y Sugerencias</h2>
            <form>
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" placeholder="Tu nombre">
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Comentario o Sugerencia</label>
                    <textarea class="form-control" id="message" rows="4" placeholder="Escribe tu mensaje"></textarea>
                </div>
                <button type="submit" class="btn btn-green w-100">Enviar</button>
            </form>
        </div>
    </section>
    
          

    <%- include('./partials/bot') %>
    <footer>
        <%-include('./partials/footer')%> 
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Script para iniciar el carrusel -->
</body>
</html>
